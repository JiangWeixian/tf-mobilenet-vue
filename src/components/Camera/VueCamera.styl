
.vue-camera
  width 100%
  height 100%
  position relative
  background-color black
  .video-wrapper
    position relative
    width 100%
    height: 1000px
    display flex
    align-items center
    video
      object-fit fill
      width: 100%
      height: 750px
    .canvas-wrapper
      position absolute
      left 0
      top 0
      width inherit
      height inherit
      display flex
      align-items center
      canvas
        width 750px
        height 750px
  .control-panel
    height: 334px
    width: 100%
    display flex
    align-items center
    justify-content center
    position relative
    .btn-play
      width 132px
      height 132px
      display flex
      align-items center
  .img-container
    position absolute
    z-index 1
    left 0
    top 0
    width inherit
    height inherit
    .img-layer
      width 100%
      height 100%
      position absolute
      background-color white
    .img-wrapper
      width 100%
      height: 1000px
      display flex
      align-items center
      img
        object-fit fill
        width 100%
        height 750px

.predict
  position absolute
  top -10px
