@import "./icons.styl"


.app
  display flex
  flex-direction column
  align-items center
  justify-content center

.app.pc
  width 750px
  height 1334px

.record-enter-active
.record-leave-active
  transition opacity .2s cubic-bezier(0.165, 0.84, 0.44, 1)
  opacity 1

.record-enter
.record-leave-active
  opacity: 0

.popup-enter-active
.popup-leave-active
  transition transform .4s cubic-bezier(0.165, 0.84, 0.44, 1)
  transform translateY(0)
  opacity 1

.popup-enter
.popup-leave-active
  transform translateY(100%)
  opacity: 0
